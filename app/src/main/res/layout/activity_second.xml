<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".MainActivity">

        <!--Make sure to save two images home and youtube in drawable folder-->

        <ImageButton
            android:id="@+id/simpleImageButtonHome"
            android:layout_width="172dp"
            android:layout_height="127dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="123dp"
            android:layout_marginEnd="133dp"
            android:layout_marginRight="133dp"
            android:background="@drawable/buka"
            android:onClick="openSoundActivity"
            android:padding="20dp" />

        <ImageButton
            android:id="@+id/simpleImageButtonYouTube"
            android:layout_width="161dp"
            android:layout_height="101dp"
            android:layout_below="@+id/simpleImageButtonHome"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="212dp"
            android:layout_marginEnd="133dp"
            android:layout_marginRight="133dp"
            android:background="@drawable/vibracija"
            android:onClick="openVibrationActivity"
            android:padding="20dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="149dp"
            android:layout_height="43dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="140dp"
            android:layout_marginRight="140dp"
            android:text="Izmeri buku"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="140dp"
            android:layout_marginRight="140dp"
            android:layout_marginBottom="277dp"
            android:text="Izmeri vibraciju"
            android:textSize="20sp" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>